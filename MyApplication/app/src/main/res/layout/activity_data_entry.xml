<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/name_field"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        app:layout_constraintBottom_toTopOf="@+id/surname_field"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:autofillHints="name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/name_field"
        app:layout_constraintStart_toStartOf="@+id/name_field"
        app:layout_constraintEnd_toEndOf="@+id/name_field"
        android:textSize="30sp"
        android:text="Enter your name"
        />

    <EditText
        android:id="@+id/surname_field"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter surname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:autofillHints="surname"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/surname_field"
        app:layout_constraintStart_toStartOf="@+id/surname_field"
        app:layout_constraintEnd_toEndOf="@+id/surname_field"
        android:textSize="30sp"
        android:text="Enter your surname"
        />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@+id/surname_field"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/surname_field"
        app:layout_constraintEnd_toEndOf="@+id/surname_field"/>


</androidx.constraintlayout.widget.ConstraintLayout>